<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.PracticumAndroidDiploma" parent="Theme.Material3.DayNight.NoActionBar">

        <!--Primary-->
        <item name="colorPrimary">@color/white</item>

        <!--For text and icons-->
        <item name="colorOnPrimary">@color/black</item>

        <!--For app background-->
        <item name="android:colorBackground">@color/white</item>

        <!--Secondary-->
        <item name="colorSecondary">@color/gray_light</item>

        <!--For text and icons-->
        <item name="colorOnSecondary">@color/gray</item>

        <item name="android:statusBarColor">?attr/colorPrimary</item>

        <item name="snackbarTextViewStyle">@style/toast_text</item>
        <item name="snackbarStyle">@style/toast</item>
    </style>

    <style name="Theme.PracticumAndroidDiploma" parent="Base.Theme.PracticumAndroidDiploma" />
