<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonBlue">
        <item name="backgroundTint">@color/blue</item>
        <item name="cornerRadius">@dimen/margin12</item>
        <item name="android:layout_marginStart">@dimen/margin8</item>
        <item name="android:layout_marginEnd">@dimen/margin8</item>
        <item name="android:layout_marginBottom">@dimen/margin20</item>
        <item name="android:minHeight">@dimen/margin59</item>

        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_m</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontWeight">500</item>
        <item name="android:lineHeight">19dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ButtonTransparent">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="cornerRadius">@dimen/margin12</item>
        <item name="android:layout_marginStart">@dimen/margin8</item>
        <item name="android:layout_marginEnd">@dimen/margin8</item>
        <item name="android:layout_marginBottom">@dimen/margin20</item>
        <item name="android:minHeight">@dimen/margin59</item>

        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/text_size_m</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontWeight">500</item>
        <item name="android:lineHeight">19dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="EditTextSearch">
        <item name="android:background">@drawable/edit_text_search</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:minHeight">@dimen/margin56</item>

        <item name="android:paddingStart">@dimen/margin16</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">@dimen/text_size_s</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>
        <item name="android:maxLines">1</item>
        <item name="android:lineHeight">@dimen/margin19</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:inputType">text</item>
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor</item>
    </style>

    <style name="TopBarButton">
        <item name="android:padding">@dimen/margin16</item>
        <item name="android:src">@drawable/arrow_back_24px</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
    </style>

    <style name="text_font_xl">
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:textSize">@dimen/text_size_lx</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:lineHeight">@dimen/line_height_lx</item>
    </style>

    <style name="text_font_l">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_l</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:lineHeight">@dimen/line_height_l</item>
    </style>

    <style name="text_font_m">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_m</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:lineHeight">@dimen/line_height_m</item>
    </style>

    <style name="text_font_s">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_s</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:lineHeight">@dimen/line_height_s</item>
    </style>

    <style name="text_font_xs">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_xs</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:lineHeight">@dimen/line_height_xs</item>
    </style>
</resources>
