<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@drawable/item_vacancy_card_background">

    <ImageView
        android:id="@+id/imageVacancyCard"
        android:layout_width="48dp"

        android:layout_height="48dp"
        android:layout_marginStart="@dimen/margin32"
        android:layout_marginTop="@dimen/margin16"

        android:layout_marginBottom="@dimen/margin16"
        android:background="@drawable/item_vacancy_card"

        android:backgroundTint="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/margin8"
        app:layout_constraintBottom_toBottomOf="@+id/imageVacancyCard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageVacancyCard"
        app:layout_constraintTop_toTopOf="@+id/imageVacancyCard"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleVacancyCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="TITLE"

            style="@style/text_font_l"/>

        <TextView
            android:id="@+id/cityVacancyCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="city"

            style="@style/text_font_s"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
