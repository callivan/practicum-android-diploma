<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.bottomnavigation.BottomNavigationView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_navigation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    android:paddingHorizontal="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="0dp"
    app:itemIconTint="@drawable/bottom_menu_item"
    app:itemTextAppearanceActive="@style/bottom_navigation_text"
    app:itemTextAppearanceActiveBoldEnabled="false"
    app:itemTextAppearanceInactive="@style/bottom_navigation_text"
    app:itemTextColor="@drawable/bottom_menu_item"
    app:itemHorizontalTranslationEnabled="true"
    app:itemPaddingBottom="30dp"
    app:itemActiveIndicatorStyle="@null"
    app:menu="@menu/bottom_navigation" />
